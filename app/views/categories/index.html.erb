<p id="notice" ><%= notice %></p>

<h1 class="m-5">Categories</h1>

<table class="m-3">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %> </td>
        <td><%= category.products.count %></td>
        <td><%= link_to 'Show', category, :class => 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_category_path(category), :class => 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-info'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p class="m-3"> <%= link_to 'New Category', new_category_path %></p>
